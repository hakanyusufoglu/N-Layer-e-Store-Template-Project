            <form  method="post" action="/Users/Update">
                
                    <div class="row">
                        <div class="col-6">
                            <strong> Name</strong>
                            <input type="text" asp-for="Name" name="Name" class="form-control" />
                        </div>
                        <div class="col-6">
                            <strong> Last Name</strong>
                            <input type="text" asp-for="LastName" name="LastName" class="form-control" />
                        </div>
                    </div>
                    <br />
                    <strong>Phone</strong>
                    <input type="text" name="Phone" asp-for="Phone" class="form-control" />

                    <strong>Adress</strong>
                    <input type="text" name="Adress" asp-for="Adress" class="form-control" />
                    <br />
                    <strong>Username</strong>
                    <input type="text" name="UserName" asp-for="UserName" class="form-control" />
                    <br />
              <input type="hidden" name="userId" asp-for="UserId" />
                    <button type="submit" class="btn btn-primary mb-2" style="float:right">Update User</button>


            </form>
        
