                                <a class="nav-link-black " href="#">
                                    Furnitures
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>

            </div>
        </div>
    </div>

    <div class="border border-dark mt-2"></div>

  
</div>


<div id="bannerSection ">
    <div class="container mt-3">
        <div class="row  ">
            <div class="col-12 ">
                <img class="ml-1" src="~/assets/img/banner.jpg" style="max-width:100% !important;" />
            </div>
        </div>
    </div>
</div>

<div id="deliveryInfo" class="mt-3 ">
    <div class="container">
        <div class="card card-body ml-1">
            <div class="row ">
                <div class="col-4">
                    <i class=" fa fa-2x fa-truck mb-3 text-primary"></i>
                    <h5><strong>Fast delivery</strong> </h5>
                    <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Veritatis, quos.</p>
                </div>
                <div class="col-4">
                    <i class="fa fa-2x fa-landmark mb-3 text-primary"></i>
                    <h5><strong>Creative Strategy</strong> </h5>
                    <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit.</p>
                </div>
                <div class="col-4">
                    <i class="fa fa-2x fa-lock mb-3 text-primary"></i>
                    <h5><strong>High secured</strong> </h5>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Aut?</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="newProducts ">

    <div class="container">
        <div class="row">
            <div class="col-10">
                <h3 class="ml-1 mt-5 mb-3"><strong>Popular Products</strong></h3>
            </div>
            <div class="col-2 ">
                <a class="btn btn-outline-primary ml-1 mt-5 mb-3 float-right">See All</a>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-3 mb-3">
                <div class="card card-body">
                    <img class="card-img-top" src="@Url.Content(item.ImageFile)" />

                    <h5 class="card-title text-center"><a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@item.ProductId">@item.Name</a></h5>
                    <h6 class="card-text text-center"><strong>@item.Price ₺</strong></h6>

                    <a href="#" class="btn btn-primary mt-3">Details</a>
                    <a href="#" class="btn btn-light btn-block border  mt-2">
                        <i class="fa fa-heart text-secondary mr-2"></i>
                        Add to wishlist

                    </a>
                </div>
                    </div>
            }

            @if (Model.Count() > 6)
            {
                <div class="row py-2">

                    <div class="col-12" style="background-color: #CB53A5">

                        <a class="btn btn-block text-light " href="#"> Show More</a>

                    </div>

                </div>
            }

            <div class="col-3 mb-3" >
                <div class="card card-body" >
                    <img src="~/assets/img/laptop_220x220.jpg" />
                    <a class="mt-3" href="#">Lenova</a>
                    <div class="price mt-2">
                        $179.00
                    </div>
                    <a href="#" class="btn btn-primary mt-3">Details</a>
                    <a href="#" class="btn btn-light btn-block border  mt-2">
                        <i class="fa fa-heart text-secondary mr-2"></i>
                        Add to wishlist

                    </a>
                </div>
            </div>

        </div>
    </div>
</div>


